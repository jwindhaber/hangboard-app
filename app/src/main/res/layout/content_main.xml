<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hangboard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.00999999"
            android:fontFamily="monospace"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <EditText
            android:id="@+id/timer_text"
            android:layout_width="282dp"
            android:layout_height="140dp"
            android:inputType="time"
            android:ems="10"
            android:text="10:00"
            android:textSize="90sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/headline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/start_button"
            android:layout_marginBottom="10dp"/>
    <Button
            android:id="@+id/start_button"
            android:text="START"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="123dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/timer_text"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="200dp"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="24sp"/>
    <EditText
            android:id="@+id/timer_info"
            android:layout_width="315dp"
            android:layout_height="120dp"
            android:inputType="text"
            android:ems="10"
            android:text="SEE"
            android:textSize="90sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp" android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/headline" android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" android:fontFamily="monospace" android:textStyle="bold"
            android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>